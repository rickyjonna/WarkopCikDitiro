<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvrvpsnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"/>
    <TextView
        android:id="@+id/tvrvpsproduct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product's Name"/>
    <TextView
        android:id="@+id/tvrvpstotal_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Stock Amount"/>
    <TextView
        android:id="@+id/tvrvpsminimum_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum_Amount"/>
    <TextView
        android:id="@+id/tvrvpsunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit"/>
</LinearLayout>