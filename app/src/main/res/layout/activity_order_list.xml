<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OrderListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blue">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glol1"
            app:layout_constraintGuide_percent="0.05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glol2"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glol3"
            app:layout_constraintGuide_percent="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
        <ImageButton
            android:id="@+id/ibtolback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/glol1"
            app:layout_constraintStart_toStartOf="@id/glol1"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrowback_50"
            android:background="@color/blue" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civolphotouser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibtolback"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/contohfotoprofil"/>

        <LinearLayout
            android:id="@+id/lloluserlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/civolphotouser"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvolusername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Tes Nama"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvolusertype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Tes Tipe"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/glol2"
            app:layout_constraintEnd_toEndOf="@id/glol2"
            app:layout_constraintTop_toTopOf="parent"
            android:text="List Pesanan"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/glol3"
            app:layout_constraintStart_toStartOf="@id/glol3"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_notifications_50"
            android:background="@color/blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <SearchView
                android:id="@+id/svolproduct"
                android:layout_weight="4.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:iconifiedByDefault="false"
                android:queryHint="Cari Produk"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvolproduct"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:padding="10dp"
                tools:listitem="@layout/list_product"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvolorderedproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pesanan"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btolorderedproduct"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pesanan"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btolallproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Semua"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btolproductctg1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Makanan"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btolproductctg2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Minuman"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btolproductctg3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Snack"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btolproductctg4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lainnya"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvolinformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Meja 5"
                android:gravity="center"
                android:background="@color/green"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvolproductordered"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="List Produk Diorder"
                tools:listitem="@layout/list_orderlist_productordered"/>
            <TextView
                android:id="@+id/tvolchangeorderlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="UBAH"
                android:textStyle="bold"
                android:gravity="center"/>
            <Button
                android:id="@+id/btolchangeorderlist"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="UBAH"/>
            <EditText
                android:id="@+id/etolnote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:hint="Note"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>