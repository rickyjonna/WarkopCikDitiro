<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl1"
                    app:layout_constraintGuide_percent="0.05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl2"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl3"
                    app:layout_constraintGuide_percent="0.95"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civfotouser"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintLeft_toLeftOf="@id/gl1"
                    app:layout_constraintRight_toRightOf="@id/gl1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/contohfotoprofil"/>
                <LinearLayout
                    android:id="@+id/userlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/civfotouser"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/namauser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Test Nama"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/tipeuser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Test Tipe"
                            android:gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/namatoko"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="@id/gl2"
                    app:layout_constraintLeft_toLeftOf="@id/gl2"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="WARKOP CIKDITIRO"
                    android:gravity="center"/>
                <ImageButton
                    android:id="@+id/ibkeluar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="@id/gl3"
                    app:layout_constraintLeft_toLeftOf="@id/gl3"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/blue"
                    android:src="@drawable/ic_power_50" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/viewgroupadmin"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:layout_weight="1"
                            android:text="HARI INI"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="6"
                                            android:text="TOTAL PENJUALAN"/>
                                        <TextView
                                            android:gravity="center"
                                            android:id="@+id/tvtotalpenjualan"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="TEST 300.000"
                                            android:textSize="30dp"
                                            android:textStyle="bold"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="6"
                                            android:text="KARYAWAN AKTIF"/>
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvactiveuser"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="List Karyawan Aktif"
                                            tools:listitem="@layout/list_empty_stock"
                                            android:scrollbars="vertical"/>
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="STOK"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="6"
                                            android:text="PRODUK"
                                            android:gravity="center"/>
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvemptystockp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:listitem="@layout/list_empty_stock"
                                            android:layout_weight="1"
                                            android:scrollbars="vertical"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="6"
                                            android:text="BAHAN"
                                            android:gravity="center"/>
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvemptystocki"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            tools:listitem="@layout/list_empty_stock"
                                            android:scrollbars="vertical"/>
                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="M\nE\nN\nU"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05">
                        <ImageButton
                            android:id="@+id/iborder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shop_100"
                            android:backgroundTint="@color/green" />
                        <ImageButton
                            android:id="@+id/iborderlist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_list_100"
                            android:backgroundTint="@color/green"/>
                        <ImageButton
                            android:id="@+id/ibkitchen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_refrigerator_100"
                            android:backgroundTint="@color/green"/>
                        <ImageButton
                            android:id="@+id/ibtcashier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_dollar_100"
                            android:backgroundTint="@color/green"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="M\nA\nN\nA\nJ\nE\nM\nE\nN"
                    android:gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                                <Button
                                    android:id="@+id/btdproduct"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Produk"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdproductcategory"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Kategori Produk"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdagent"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Agen Produk"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdingredient"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Bahan Produk"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdformula"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Unit Formula Produk"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdpartner"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Rekan Produk"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                                <Button
                                    android:id="@+id/btdtable"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Meja"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdpstock"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Stok"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btduser"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Karyawan"
                                    android:textSize="10dp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                                <Button
                                    android:id="@+id/btdpayment"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="center"
                                    android:text="Tipe Pembayaran"
                                    android:textSize="7.5dp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@color/blue"/>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>